<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://projectMasterDetailView.title"
      focusComponent="projectsDataGrid">
    <data>
        <collection id="projectsDc"
                    class="com.company.jmixpm.entity.Project">
            <fetchPlan extends="_base"/>
            <loader id="projectsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Project e]]>
                </query>
            </loader>
        </collection>
        <instance id="projectDc"
                  class="com.company.jmixpm.entity.Project">
            <fetchPlan extends="_base"/>
            <loader id="projectDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout padding="false">
        <formLayout classNames="master-detail-layout" height="100%">
            <vbox id="listLayout" height="100%">
                <genericFilter id="genericFilter"
                               dataLoader="projectsDl">
                    <properties include=".*"/>
                </genericFilter>
                <hbox id="buttonsPanel" classNames="buttons-panel">
                    <button id="createBtn" action="projectsDataGrid.create"/>
                    <button id="editBtn" action="projectsDataGrid.edit"/>
                    <button id="removeBtn" action="projectsDataGrid.remove"/>
                    <simplePagination id="pagination" dataLoader="projectsDl"/>
                </hbox>
                <dataGrid id="projectsDataGrid"
                          width="100%"
                          minHeight="20em"
                          dataContainer="projectsDc"
                          columnReorderingAllowed="true">
                    <actions>
                        <action id="create" type="list_create"/>
                        <action id="edit" type="list_edit"/>
                        <action id="remove" type="list_remove"/>
                    </actions>
                    <columns>
                        <column property="name"/>
                        <column property="startDate"/>
                        <column property="endDate"/>
                        <column property="status"/>
                        <column property="projectLabels"/>
                    </columns>
                </dataGrid>
                <hbox id="lookupActions" visible="false">
                    <button id="selectBtn" action="selectAction"/>
                    <button id="discardBtn" action="discardAction"/>
                </hbox>
            </vbox>
            <vbox id="detailsLayout" height="100%">
                <formLayout id="form" dataContainer="projectDc">
                    <textField id="nameField" property="name"/>
                    <dateTimePicker id="startDateField" property="startDate"/>
                    <dateTimePicker id="endDateField" property="endDate"/>
                    <select id="statusField" property="status"/>
                    <textField id="projectLabelsField" property="projectLabels"/>
                </formLayout>
                <hbox id="detailActions">
                    <button id="saveBtn" text="msg:///actions.Save" icon="CHECK" themeNames="primary"/>
                    <button id="cancelBtn" text="msg:///actions.Cancel" icon="BAN"/>
                </hbox>
            </vbox>
        </formLayout>
    </layout>
</view>
